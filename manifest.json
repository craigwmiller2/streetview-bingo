{
    "manifest_version": 3,
    "name": "Street View Bingo",
    "version": "1.2",
    "browser_specific_settings": {
        "gecko": {
            "id": "sv-bingo@example.com"
        }
    },
    "permissions": ["tabs", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "sidebar_action": {
        "default_panel": "sidebar.html"
    }
}
