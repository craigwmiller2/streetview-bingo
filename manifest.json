{
    "manifest_version": 3,
    "name": "Street View Bingo",
    "version": "1.2.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "streetview-bingo@orknet.co.uk",
            "update_url": "https://craigwmiller2.github.io/streetview-bingo/updates.json",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    },
    "permissions": ["tabs", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "sidebar_action": {
        "default_panel": "sidebar.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["audio/*.mp3", "audio/*.ogg"],
            "matches": ["<all_urls>"]
        }
    ]
}
