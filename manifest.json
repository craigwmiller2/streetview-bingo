{
    "manifest_version": 3,
    "name": "Street View Bingo",
    "version": "0.0.9",
    "browser_specific_settings": {
        "gecko": {
            "id": "streetview-bingo@orknet.co.uk",
            "update_url": "https://craigwmiller2.github.io/streetview-bingo/updates.json"
        }
    },
    "permissions": ["tabs", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "sidebar_action": {
        "default_panel": "sidebar.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["audio/*.mp3"],
            "matches": ["<all_urls>"]
        }
    ]
}
